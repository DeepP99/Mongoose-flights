<!-- views/flights/new.ejs -->
<%- include('../partials/header') %>
<form action="/flights" method="post">
  <label for="airline">Airline:</label>
  <input type="text" id="airline" name="airline" required><br>
  <label for="airport">Airport:</label>
  <input type="text" id="airport" name="airport" required><br>
  <label for="flightNo">Flight No.:</label>
  <input type="number" id="flightNo" name="flightNo" min="10" max="9999" required><br>
  <label for="departs">Departs:</label>
  <input type="date" id="departs" name="departs" required><br>
  <button type="submit">Submit</button>
</form>
<%- include('../partials/footer') %>

